{
  "name": "Genx-Platform-Backend",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "matangover.mypy"
      ]
    }
  },
  "forwardPorts": [5001, 5002, 27017],
  // "remoteUser": "vscode",
  "remoteEnv": {
    // "USERNAME": "vscode",
    "DEMO": "false",
    "IP_ADDRESS": "localhost",
    "MONGO_IP_ADDRESS": "mongodb",
    "AIServicesIp": "localhost",
    "AIServerPort": "4001",
    "PYTHONPATH": "${containerWorkspaceFolder}"
  },
  // "postCreateCommand": "echo hi",
  "postCreateCommand": "chmod +x init-db.sh && ./init-db.sh && uv venv && . .venv/bin/activate && uv pip install -r AIPlatform_backend/requirements.txt && uv run AIPlatform_backend/main.py",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}